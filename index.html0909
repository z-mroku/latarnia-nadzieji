        }
        100% {
            /* Powolne wygaszanie */
            border-color: gold;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.5);
        }
    }
    
    /* Klasa uruchamiajƒÖca animacjƒô */
    .explode-red {
