    /* 1. PRZESTROGA DLA RODZIC√ìW */
    .animated-warning {
      border: 2px solid gold;
      box-shadow: 0 0 15px rgba(255, 215, 0, 0.5);
      padding: 20px;
      margin: 20px auto 40px auto;
      max-width: 800px;
      border-radius: 8px;
