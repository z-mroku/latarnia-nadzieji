    }

    /* === NOWO≈öƒÜ: Animacja czerwonej eksplozji === */
    @keyframes red-explosion {
        0% {
            border-color: gold;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.5);
        }
        25% {
            /* Szczyt eksplozji */
            border-color: #ff4d4d;
            box-shadow: 0 0 40px #ff1111, 
                        0 0 80px #ff1111, 
                        0 0 120px #d40000, 
